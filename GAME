        { id: 'rz_id_1', text: '–ö—Ç–æ –∏–∑ –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–Ω—ã—Ö ‚Äî –∏–Ω–¥–æ–Ω–µ–∑–∏–π—Å–∫–∏–π —Ö—É–¥–æ–∂–Ω–∏–∫ XIX –≤–µ–∫–∞, –∏–∑–≤–µ—Å—Ç–Ω—ã–π –∏—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏–º–∏ –ø–æ–ª–æ—Ç–Ω–∞–º–∏ (–≤ —Ç.—á. –ø—Ä–æ –î–∏–ø–æ–Ω–µ–≥–æ—Ä–æ)?', choices: ['–†–∞–¥–µ–Ω –°–∞–ª–µ—Ö', '–í–∞–Ω –ì–æ–≥', '–ú–æ–Ω–µ', '–ì–æ–π—è'], answer: '–†–∞–¥–µ–Ω –°–∞–ª–µ—Ö', tags: ['history','redemption'], icon: 'üáÆüá©' },
        { id: 'rz_id_2', text: '–ö–∞–∫–∞—è –∏–∑ —ç—Ç–∏—Ö —Å—Ç—Ä–∞–Ω —Å–æ—Å—Ç–æ–∏—Ç –∏–∑ —Ç—ã—Å—è—á –æ—Å—Ç—Ä–æ–≤–æ–≤ –∏ –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –≤ –Æ–≥–æ‚Äë–í–æ—Å—Ç–æ—á–Ω–æ–π –ê–∑–∏–∏?', choices: ['–ò–Ω–¥–æ–Ω–µ–∑–∏—è', '–ù–æ—Ä–≤–µ–≥–∏—è', '–ú–∞—Ä–æ–∫–∫–æ', '–ß–∏–ª–∏'], answer: '–ò–Ω–¥–æ–Ω–µ–∑–∏—è', tags: ['history','redemption'], icon: 'üáÆüá©' },
        { id: 'rz_id_3', text: '–ö–∞–∫ –Ω–∞–∑—ã–≤–∞–µ—Ç—Å—è —Å—Ç–æ–ª–∏—Ü–∞ –ò–Ω–¥–æ–Ω–µ–∑–∏–∏ (—à—Ç–∞–±‚Äë–∫–≤–∞—Ä—Ç–∏—Ä–∞ –ê–°–ï–ê–ù –Ω–∞—Ö–æ–¥–∏—Ç—Å—è —Ç–∞–º)?', choices: ['–î–∂–∞–∫–∞—Ä—Ç–∞', '–ë–∞–Ω–≥–∫–æ–∫', '–•–∞–Ω–æ–π', '–ú–∞–Ω–∏–ª–∞'], answer: '–î–∂–∞–∫–∞—Ä—Ç–∞', tags: ['history','redemption'], icon: 'üáÆüá©' }
      ]
    };

    function buildRedemptionDeck(langCode) {
      const pack = redemptionPacks[langCode] || redemptionPacks.zh;
      return pack.slice(0, 3);
    }


    const state = {
      phase: 'init', // select_profile | select_language | ready | quiz | redemption | ended
      profile: null,
      language: null,
      mission: null,
      correct: 0,
      wrong: 0,
      score: 0,
      index: 0,
      deck: [],
      lifelines: { fifty: true, buddy: true, center: true },
      trust: TRUST_START,
      modifiers: { wrongExtra: 0, correctBonus: 0, remaining: 0 },
      incident: { active: false, data: null },
      rep: REP_MAX,
      exiled: false,
      exile: null,

      // redemption flow: 3 history questions to restore +3 reputation
      redemption: { active: false, idx: 0, correct: 0, deck: [] },
      lastFailureType: 'generic'
    };

    function clamp(n, min, max) {
      return Math.max(min, Math.min(max, n));
    }

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
    }

    function shuffledCopy(arr) {
      const a = [...arr];
      shuffle(a);
      return a;
    }

    function pickRandomDistinct(arr, n) {
      const a = shuffledCopy(arr);
      return a.slice(0, Math.min(n, a.length));
    }

    function getRank(correct) {
      let current = ladder[0];
      for (const step of ladder) {
        if (correct >= step.min) current = step;
      }
      return current;
    }

    function profileLabel() {
      return state.profile && profiles[state.profile] ? profiles[state.profile].name : '‚Äî';
    }

    function languageLabel() {
      const found = languages.find(x => x.code === state.language);
      return found ? found.name : '‚Äî';
    }


    
    function missionLabel() {
      return state.mission && missions[state.mission] ? missions[state.mission].name : '‚Äî';
    }


    function updateMetaLine() {
      const el = document.getElementById('meta-line');
      if (!el) return;
      el.innerText = `–ü—Ä–æ—Ñ–∏–ª—å: ${profileLabel()} ‚Ä¢ –Ø–∑—ã–∫: ${languageLabel()} ‚Ä¢ –ú–∏—Å—Å–∏—è: ${missionLabel()}`;
    }

    function updateStats() {
      const total = state.deck.length > 0 ? state.deck.length : TOTAL_QUESTIONS;
      const attempted = state.correct + state.wrong;
      const accuracy = attempted === 0 ? 0 : Math.round((state.correct / attempted) * 100);
      const rank = getRank(state.correct);

      state.score = Math.max(0, state.score);
      const repText = `${state.rep}/${REP_MAX}`;

      document.getElementById('val-score').innerText = state.score;
      document.getElementById('val-rep').innerText = repText;
      document.getElementById('val-accuracy').innerText = accuracy + '%';
      document.getElementById('val-rank').innerText = rank.title;
      document.getElementById('val-progress').innerText = `${state.index}/${total}`;

      document.getElementById('day-count').innerText = state.phase === 'quiz' ? Math.min(state.index + 1, total) : 0;
      document.getElementById('max-count').innerText = total;
      document.getElementById('days-left').innerText = Math.max(0, total - state.index);

      document.getElementById('bar-score').style.width = Math.min(100, (state.score / (total * 10)) * 100) + '%';
      document.getElementById('bar-rep').style.width = Math.min(100, (state.rep / REP_MAX) * 100) + '%';
      document.getElementById('bar-trust').style.width = Math.min(100, (state.trust / TRUST_MAX) * 100) + '%';
      document.getElementById('bar-accuracy').style.width = accuracy + '%';
      document.getElementById('bar-rank').style.width = Math.min(100, ((ladder.indexOf(rank) + 1) / ladder.length) * 100) + '%';
      document.getElementById('bar-progress').style.width = Math.min(100, (state.index / total) * 100) + '%';

      updateMetaLine();
    }

    function resetLog() {
      document.getElementById('game-log').innerHTML = '<div class=\"text-slate-400\">–ñ—É—Ä–Ω–∞–ª —Å–æ–±—ã—Ç–∏–π –ø—É—Å—Ç...</div>';
    }

    function addLog(msg) {
      const log = document.getElementById('game-log');
      if (log.querySelector('.text-slate-400')) log.innerHTML = '';
      const entry = document.createElement('div');
      entry.className = 'border-l-2 border-slate-300 pl-2 py-1 hover:bg-slate-50 transition-colors';
      entry.innerText = msg;
      log.prepend(entry);
    }

    function showFeedback(msg, sticky = false) {
      const fb = document.getElementById('feedback');
      const txt = document.getElementById('feedback-text');
      const closeBtn = document.getElementById('feedback-close');

      txt.innerText = msg;
      closeBtn.style.display = sticky ? 'block' : 'none';
      fb.style.opacity = '1';
      fb.style.pointerEvents = 'auto';

      if (!sticky) {
        setTimeout(() => hideFeedback(), 1300);
      }
    }

    function hideFeedback() {
      const fb = document.getElementById('feedback');
      fb.style.opacity = '0';
      fb.style.pointerEvents = 'none';
    }

    
    function enableCrisisUI() {
      const screen = document.getElementById('game-screen');
      if (screen) screen.classList.add('crisis-mode');
    }

    function disableCrisisUI() {
      const screen = document.getElementById('game-screen');
      if (screen) screen.classList.remove('crisis-mode');
      const rain = document.getElementById('storm-overlay');
      if (rain) { rain.classList.add('hidden'); rain.innerHTML = ''; }
    }


function stormBurst(duration = 950, drops = 140) {
  const overlay = document.getElementById('storm-overlay');
  const screen = document.getElementById('game-screen');
  if (!overlay || !screen) return;

  overlay.innerHTML = '';
  overlay.classList.add('active');

  const w = screen.clientWidth || 800;

  // rain drops
  for (let i = 0; i < drops; i++) {
    const d = document.createElement('div');
    d.className = 'storm-drop';
    d.style.left = Math.floor(Math.random() * w) + 'px';
    const ms = 260 + Math.floor(Math.random() * 520);
    d.style.animationDuration = ms + 'ms';
    d.style.animationDelay = Math.floor(Math.random() * 180) + 'ms';
    overlay.appendChild(d);
  }

  // lightning flashes (2-3)
  const flashes = 2 + Math.floor(Math.random() * 2);
  for (let i = 0; i < flashes; i++) {
    setTimeout(() => {
      const f = document.createElement('div');
      f.className = 'storm-flash';
      overlay.appendChild(f);
      setTimeout(() => f.remove(), 260);
      screen.classList.add('shake');
      setTimeout(() => screen.classList.remove('shake'), 360);
    }, 120 + i * (220 + Math.floor(Math.random() * 180)));
  }

  setTimeout(() => {
    overlay.classList.remove('active');
    overlay.innerHTML = '';
  }, duration);
}

    function failRedemption() {
      disableCrisisUI();
      state.redemption.active = false;
      state.exiled = true;
      const c = getPlayCountry();
      exileNow(c.flag);
      return;
    }

    function makeChoice(choice, q) {
      if (state.phase !== 'quiz') return;
      disableChoiceButtons();

      const isCorrect = choice === q.answer;
      if (isCorrect) {
        state.correct++;
        // style points: gain small trust on correct answers
        state.trust = clamp(state.trust + 1, 0, TRUST_MAX);
        addLog(`–í–µ—Ä–Ω–æ: ${q.answer}.`);
        state.score += 10 + (state.modifiers.remaining > 0 ? (state.modifiers.correctBonus || 0) : 0);
        showFeedback(`–í–µ—Ä–Ω–æ! –ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç: ${q.answer}.`);
      } else {
        state.wrong++;
        state.rep = Math.max(0, state.rep - 1);
        addLog(`–ù–µ–≤–µ—Ä–Ω–æ. –ü—Ä–∞–≤–∏–ª—å–Ω–æ: ${q.answer}. (-1 —Ä–µ–ø—É—Ç–∞—Ü–∏—è)`);
        showFeedback(`–ù–µ–≤–µ—Ä–Ω–æ. –ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç: ${q.answer}. (-1 —Ä–µ–ø—É—Ç–∞—Ü–∏—è)`);
        updateStats();

        if (state.rep <= 0) {
          state.lastFailureType = inferFailureType(q);
          startRedemption();
          return;
        }
      }

      if (state.modifiers.remaining > 0) state.modifiers.remaining = Math.max(0, state.modifiers.remaining - 1);
      state.index++;
      updateStats();

      setTimeout(() => nextQuestion(), 1100);
    }

    function nextQuestion() {
      if (state.index >= state.deck.length) {
        endGame();
        return;
      }

      // Trigger incidents every 5 questions (except during redemption)
      if (state.phase === 'quiz' && state.index > 0 && state.index % 5 === 0 && !state.incident.active && !state.redemption.active) {
        const inc = incidents[Math.floor(Math.random() * incidents.length)];
        showIncident(inc);
        return;
      }

      renderQuestion(state.deck[state.index]);
    }

    function beginQuiz() {
      if (!state.profile) {
        showFeedback('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–æ—Ñ–∏–ª—å –æ–±—É—á–µ–Ω–∏—è/–±—ç–∫–≥—Ä–∞—É–Ω–¥–∞.', true);
        return;
      }
      if (!state.language) {
        showFeedback('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π —è–∑—ã–∫.', true);
        return;
      }
      if (!state.mission) {
        showFeedback('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ –º–∏—Å—Å–∏—é –∫–æ–º–∞–Ω–¥–∏—Ä–æ–≤–∫–∏.', true);
        return;
      }

      state.phase = 'quiz';
      state.correct = 0;
      state.wrong = 0;
      state.score = 0;
      state.index = 0;
      state.deck = buildDeck();
      state.lifelines = { fifty: true, buddy: true, center: true };
      state.trust = TRUST_START;
      state.modifiers = { wrongExtra: 0, correctBonus: 0, remaining: 0 };
      state.incident = { active: false, data: null };
      state.rep = REP_MAX;
      state.exiled = false;
      state.exile = null;
      state.redemption = { active: false, idx: 0, correct: 0, deck: [] };
      state.exile = null;

      document.getElementById('game-over-screen').classList.add('hidden');
      document.getElementById('start-btn').classList.add('hidden');

      resetLog();
      addLog(`–ù–∞–∑–Ω–∞—á–µ–Ω–∏–µ: ${profiles[state.profile].name}. –î–æ–ø. —è–∑—ã–∫: ${languageLabel()}.`);
      addLog('–ü–æ–¥—Å–∫–∞–∑–∫–∏ –¥–æ—Å—Ç—É–ø–Ω—ã: ¬´—Å–æ–∫—Ä–∞—Ç–∏—Ç—å –≤–∞—Ä–∏–∞–Ω—Ç—ã¬ª, ¬´—Å–æ–≤–µ—Ç —Å—Ç–∞—Ä—à–µ–≥–æ —Ç–æ–≤–∞—Ä–∏—â–∞¬ª, ¬´–∑–∞–ø—Ä–æ—Å –≤ –¶–µ–Ω—Ç—Ä¬ª (–ø–æ 1 —Ä–∞–∑—É).');

      updateLifelinesUI();
      updateStats();
      nextQuestion();
    }

    function endGame() {
      state.phase = 'ended';
      updateLifelinesUI();

      const total = state.deck.length || TOTAL_QUESTIONS;
      const accuracy = total === 0 ? 0 : Math.round((state.correct / total) * 100);
      const rank = getRank(state.correct);

      const screen = document.getElementById('game-over-screen');
      screen.classList.remove('hidden');

      setArtOnScreen('end', state.exiled ? 'exile' : 'service');
      document.getElementById('end-title').innerText = '–ò—Ç–æ–≥–∏ —Å–ª—É–∂–±—ã';
      document.getElementById('end-desc').innerText = `${rank.comment} (–ü—Ä–æ—Ñ–∏–ª—å: ${profileLabel()}, —è–∑—ã–∫: ${languageLabel()}.)`;

      document.getElementById('final-correct').innerText = state.correct;
      document.getElementById('final-score').innerText = state.score;
      document.getElementById('final-accuracy').innerText = accuracy + '%';
      document.getElementById('final-rank').innerText = rank.title;
      document.getElementById('final-trust').innerText = `${state.trust}/${TRUST_MAX}`;
      document.getElementById('final-mission').innerText = missionLabel();

      addLog(`–ò—Ç–æ–≥: ${state.correct} –∏–∑ ${total}. –†–∞–Ω–≥: ${rank.title}.`);
    }

    
    function showIntroScreen() {
      state.phase = 'init';
      updateLifelinesUI();
      updateStats();

      // Neutral onboarding intro
      setScene('üßë‚Äçüíº', '–í—ã –ø–æ—Å—Ç—É–ø–∏–ª–∏ –Ω–∞ —Å–ª—É–∂–±—É',
        '–í—ã ‚Äî –Ω–æ–≤—ã–π —Å–æ—Ç—Ä—É–¥–Ω–∏–∫ —Ç–æ—Ä–≥–æ–≤–æ–≥–æ –ø—Ä–µ–¥—Å—Ç–∞–≤–∏—Ç–µ–ª—å—Å—Ç–≤–∞. –ß—Ç–æ–±—ã —Ä–∞—Å—Ç–∏ –ø–æ –∫–∞—Ä—å–µ—Ä–Ω–æ–π –ª–µ—Å—Ç–Ω–∏—Ü–µ, –æ—Ç–≤–µ—á–∞–π—Ç–µ –Ω–∞ –≤–æ–ø—Ä–æ—Å—ã –æ —Å—Ç—Ä–∞–Ω–∞—Ö –º–∏—Ä–∞. –ö–∞–∂–¥—ã–π –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç –ø—Ä–∏–±–ª–∏–∂–∞–µ—Ç –≤–∞—Å –∫ –¥–æ–ª–∂–Ω–æ—Å—Ç–∏ —Ç–æ—Ä–≥–ø—Ä–µ–¥–∞.');

      const choicesDiv = document.getElementById('choices-container');
      choicesDiv.innerHTML = '';
      const startBtn = document.getElementById('start-btn');
      startBtn.classList.remove('hidden');
      startBtn.innerText = '–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å';
    }

function showProfileSelection() {
      state.phase = 'select_profile';
      document.getElementById('start-btn').classList.add('hidden');
      updateLifelinesUI();
      updateStats();

      setScene('üóÇÔ∏è', '–í—ã–±–æ—Ä –∫–ª–∞—Å—Å–∞ (–ø—Ä–æ—Ñ–∏–ª—è)', '–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–æ—Ñ–∏–ª—å –æ–±—É—á–µ–Ω–∏—è/–±—ç–∫–≥—Ä–∞—É–Ω–¥–∞. –û–Ω –≤–ª–∏—è–µ—Ç –Ω–∞ —Ç–æ, –∫–∞–∫–∏–µ –≤–æ–ø—Ä–æ—Å—ã —á–∞—â–µ –ø–æ–ø–∞–¥—É—Ç—Å—è –∏ –∫–∞–∫ ¬´—Å—Ç–∞—Ä—à–∏–π —Ç–æ–≤–∞—Ä–∏—â¬ª –±—É–¥–µ—Ç –ø–æ–¥—Å–∫–∞–∑—ã–≤–∞—Ç—å.');

      const choicesDiv = document.getElementById('choices-container');
      choicesDiv.innerHTML = '';

      const order = ['econ', 'tech', 'law', 'ir', 'east', 'edu'];
      order.forEach((key) => {
        const p = profiles[key];
        const btn = document.createElement('button');
        btn.className = 'normal-choice w-full text-white font-bold py-4 px-5 rounded-xl transition transform hover:-translate-y-1 shadow-lg text-left flex items-center group border';
        btn.innerHTML = `
          <div class="normal-bullet rounded-full w-10 h-10 min-w-[2.5rem] flex items-center justify-center mr-4 text-base font-mono border shadow-inner">
            ${p.icon}
          </div>
          <div class="flex-1">
            <div class="text-base">${p.name}</div>
            <div class="text-xs text-slate-300 leading-snug mt-1">${p.desc}</div>
          </div>
        `;
        btn.onclick = () => {
          state.profile = key;
          addLog(`–ü—Ä–æ—Ñ–∏–ª—å –≤—ã–±—Ä–∞–Ω: ${p.name}.`);
          showLanguageSelection();
        };
        choicesDiv.appendChild(btn);
      });
    }

    function showLanguageSelection() {
      state.phase = 'select_language';
      document.getElementById('start-btn').classList.add('hidden');
      updateLifelinesUI();
      updateStats();

      setScene('üó£Ô∏è', '–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π —è–∑—ã–∫', '–í—ã–±–µ—Ä–∏—Ç–µ –æ–¥–∏–Ω —è–∑—ã–∫ –∏–∑ —Ç–æ–ø‚Äë10 (–∫—Ä–æ–º–µ —Ä—É—Å—Å–∫–æ–≥–æ –∏ –∞–Ω–≥–ª–∏–π—Å–∫–æ–≥–æ). –≠—Ç–æ –¥–æ–±–∞–≤–∏—Ç –≤–æ–ø—Ä–æ—Å—ã –ø—Ä–æ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–∏–µ —Å—Ç—Ä–∞–Ω—ã –∏ –∫—É–ª—å—Ç—É—Ä–Ω—ã–π –∫–æ–Ω—Ç–µ–∫—Å—Ç.');
      setUNArtOnEvent();

      const choicesDiv = document.getElementById('choices-container');
      choicesDiv.innerHTML = '';

      languages.forEach((l) => {
        const btn = document.createElement('button');
        btn.className = 'normal-choice w-full text-white font-bold py-4 px-5 rounded-xl transition transform hover:-translate-y-1 shadow-lg text-left flex items-center group border';
        btn.innerHTML = `
          <div class="normal-bullet rounded-full w-10 h-10 min-w-[2.5rem] flex items-center justify-center mr-4 text-base font-mono border shadow-inner">
            ${l.icon}
          </div>
          <div class="flex-1">
            <div class="text-base">${l.name}</div>
            <div class="text-xs text-slate-300 leading-snug mt-1">–£—Å–∏–ª–∏—Ç –≤–æ–ø—Ä–æ—Å—ã –∏ –ø–æ–¥—Å–∫–∞–∑–∫–∏ –ø–æ —Å—Ç—Ä–∞–Ω–µ/—è–∑—ã–∫—É.</div>
          </div>
        `;
        btn.onclick = () => {
          state.language = l.code;
          addLog(`–Ø–∑—ã–∫ –≤—ã–±—Ä–∞–Ω: ${l.name}.`);
          showMissionSelection();
        };
        choicesDiv.appendChild(btn);
      });
    }

    
    function showMissionSelection() {
      state.phase = 'select_mission';
      document.getElementById('start-btn').classList.add('hidden');
      updateLifelinesUI();
      updateStats();

      setScene('üéØ', '–í—ã–±–æ—Ä –º–∏—Å—Å–∏–∏', '–í—ã–±–µ—Ä–∏—Ç–µ –∑–∞–¥–∞—á—É –∫–æ–º–∞–Ω–¥–∏—Ä–æ–≤–∫–∏. –û–Ω–∞ –≤–ª–∏—è–µ—Ç –Ω–∞ —Å–æ—Å—Ç–∞–≤ –≤–æ–ø—Ä–æ—Å–æ–≤ –∏ –Ω–∞ —Ç–æ, –∫–∞–∫ ‚Äú–¶–µ–Ω—Ç—Ä‚Äù —Ä–µ–∞–≥–∏—Ä—É–µ—Ç –Ω–∞ –≤–∞—à–∏ —Ä–µ—à–µ–Ω–∏—è.');
      setUNArtOnEvent();

      const choicesDiv = document.getElementById('choices-container');
      choicesDiv.innerHTML = '';

      const order = ['invest', 'export', 'dispute', 'visit'];
      order.forEach((key) => {
        const m = missions[key];
        const btn = document.createElement('button');
        btn.className = 'w-full bg-slate-800 hover:bg-slate-700 text-white font-bold py-4 px-5 rounded-xl transition transform hover:-translate-y-1 shadow-lg text-left flex items-center group border border-slate-700';
        btn.innerHTML = `
          <div class="bg-slate-600 group-hover:bg-slate-500 rounded-full w-10 h-10 min-w-[2.5rem] flex items-center justify-center mr-4 text-base font-mono border border-slate-500 shadow-inner">
            ${m.icon}
          </div>
          <div class="flex-1">
            <div class="text-base">${m.name}</div>
            <div class="text-xs text-slate-300 leading-snug mt-1">${m.desc}</div>
          </div>
        `;
        btn.onclick = () => {
          state.mission = key;
          addLog(`–ú–∏—Å—Å–∏—è –≤—ã–±—Ä–∞–Ω–∞: ${m.name}.`);
          showSummary();
        };
        choicesDiv.appendChild(btn);
      });
    }

function showSummary() {
      state.phase = 'ready';
      updateStats();
      updateLifelinesUI();

      setScene('‚úÖ', '–ù–∞–∑–Ω–∞—á–µ–Ω–∏–µ —É—Ç–≤–µ—Ä–∂–¥–µ–Ω–æ', `–ü—Ä–æ—Ñ–∏–ª—å: ${profileLabel()}. –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π —è–∑—ã–∫: ${languageLabel()}. –£ –≤–∞—Å –µ—Å—Ç—å 3 –ø–æ–¥—Å–∫–∞–∑–∫–∏ (–ø–æ –æ–¥–Ω–æ–º—É —Ä–∞–∑—É –∫–∞–∂–¥–∞—è).`);

      const choicesDiv = document.getElementById('choices-container');
      choicesDiv.innerHTML = '';

      const summary = document.createElement('div');
      summary.className = 'bg-slate-50 border border-slate-200 rounded-xl p-4 text-sm text-slate-700';
      summary.innerHTML = `
        <div class="font-bold text-slate-900 mb-2">–ö–æ—Ä–æ—Ç–∫–∞—è –ø–∞–º—è—Ç–∫–∞</div>
        <div class="mb-1">‚Ä¢ üßÆ ¬´–°–æ–∫—Ä–∞—Ç–∏—Ç—å –≤–∞—Ä–∏–∞–Ω—Ç—ã¬ª ‚Äî —É–±–∏—Ä–∞–µ—Ç 2 –Ω–µ–≤–µ—Ä–Ω—ã—Ö –æ—Ç–≤–µ—Ç–∞.</div>
        <div class="mb-1">‚Ä¢ üßë‚Äçüíº ¬´–°–æ–≤–µ—Ç —Å—Ç–∞—Ä—à–µ–≥–æ —Ç–æ–≤–∞—Ä–∏—â–∞¬ª ‚Äî –¥–∞—Å—Ç —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏—é —Å –≤–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç—å—é –æ—à–∏–±–∫–∏.</div>
        <div>‚Ä¢ üì° ¬´–ó–∞–ø—Ä–æ—Å –≤ –¶–µ–Ω—Ç—Ä¬ª ‚Äî –ø—Ä–∏—à–ª—ë—Ç ¬´–æ—Ü–µ–Ω–∫—É –≤–µ—Ä–æ—è—Ç–Ω–æ—Å—Ç–∏¬ª –ø–æ –≤–∞—Ä–∏–∞–Ω—Ç–∞–º.</div>
      `;
      choicesDiv.appendChild(summary);

      const startBtn = document.getElementById('start-btn');
      startBtn.classList.remove('hidden');
      startBtn.innerText = '–ù–∞—á–∞—Ç—å –∫–æ–º–∞–Ω–¥–∏—Ä–æ–≤–∫—É';
    }

    function resetToOnboarding() {
      state.profile = null;
      state.language = null;
      state.mission = null;
      state.correct = 0;
      state.wrong = 0;
      state.score = 0;
      state.index = 0;
      state.deck = [];
      state.lifelines = { fifty: true, buddy: true, center: true };
      state.trust = TRUST_START;
      state.modifiers = { wrongExtra: 0, correctBonus: 0, remaining: 0 };
      state.incident = { active: false, data: null };
      state.rep = REP_MAX;
      state.exiled = false;
      state.exile = null;
      state.redemption = { active: false, idx: 0, correct: 0, deck: [] };
      state.exile = null;
      state.phase = 'init';

      hideFeedback();
      document.getElementById('game-over-screen').classList.add('hidden');
      resetLog();
      updateStats();
      showProfileSelection();
    }

    // --- Failsafe handler (works even if DOMContentLoaded listeners fail) ---
    function startBtnHandler() {
      try {
        if (state.phase === 'init' || state.phase === 'select_profile' || state.phase === 'select_language' || state.phase === 'select_mission') {
          // if we're still onboarding, show the appropriate next screen
          if (state.phase === 'select_profile') return showProfileSelection();
          if (state.phase === 'select_language') return showLanguageSelection();
          if (state.phase === 'select_mission') return showMissionSelection();
          return showProfileSelection();
        }
        if (state.phase === 'ready') return beginQuiz();
      } catch (e) {
        console.error('startBtnHandler error', e);
        // last resort: restart onboarding
        try { resetToOnboarding(); } catch(_) {}
      }
    }
    window.startBtnHandler = startBtnHandler;

    // ---- Bootstrapping: make sure the start screen is interactive even if inline handlers fail ----
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const startBtn = document.getElementById('start-btn');
        if (startBtn) {
          startBtn.addEventListener('click', (e) => {
            e.preventDefault();
            startBtnHandler();
          });
        }
        // Ensure initial UI/state are consistent
        if (typeof showIntroScreen === 'function') showIntroScreen();
      } catch (e) {
        console.error('bootstrap error', e);
      }
    });



    document.addEventListener('DOMContentLoaded', () => {
      const lf = document.getElementById('life-fifty');
      const lb = document.getElementById('life-buddy');
      const lc = document.getElementById('life-center');

      if (lf && typeof useFiftyFifty === 'function') lf.addEventListener('click', useFiftyFifty);
      if (lb && typeof useBuddy === 'function') lb.addEventListener('click', useBuddy);
      if (lc && typeof useCenter === 'function') lc.addEventListener('click', useCenter);

            // click listener left as backup; primary is inline onclick
      const sb = document.getElementById('start-btn');
      if (sb) sb.addEventListener('click', startBtnHandler);
    });
  </script>
</body>
</html>
