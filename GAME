  intellect:{ file: 'Saturn_Devouring_His_Son.jpg', caption: '–¢–µ–º–∞: –∏–Ω—Ç–µ–ª–ª–µ–∫—Ç—É–∞–ª—å–Ω–∞—è –¥—É—ç–ª—å, —Å—Ç—Ä–∞—à–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞. Wikimedia Commons.' },
  trust:  { file: 'Departure_of_fleet_from_Lisbon_harbor.jpg', caption: '–¢–µ–º–∞: –¥–æ–≤–µ—Ä–∏–µ —É—Ç–µ–∫–ª–æ, –≤—ã ‚Äú–≤ –º–æ—Ä–µ‚Äù –±–µ–∑ –º–∞–Ω–¥–∞—Ç–∞. Wikimedia Commons.' },
  generic:{ file: 'Karl_Julius_von_Leypold_-_Wanderer_im_Sturm.jpg', caption: '–¢–µ–º–∞: –∫—Ä–∏–∑–∏—Å –≤ —Ü–µ–ª–æ–º. Wikimedia Commons.' }
};

function inferFailureType(q) {
  const c = getPlayCountry();
  const tags = Array.isArray(q?.tags) ? q.tags : [];

  // strong country defaults
  const countryDefault = {
    'üá®üá≥': 'face',
    'üáØüáµ': 'harmony',
    'üá©üá™': 'regulation',
    'üá∏üá¶': 'honor',
    'üá≤üá¶': 'honor',
    'üá´üá∑': 'intellect',
    'üá∫üá∏': 'trust'
  }[c.flag] || null;

  // tag-based
  if (tags.includes('law')) return 'regulation';
  if (tags.includes('tech')) return 'regulation';
  if (tags.includes('lang')) return countryDefault || 'face';
  if (tags.includes('culture')) return countryDefault || 'honor';
  if (tags.includes('ir')) return countryDefault || 'trust';

  return countryDefault || 'generic';
}

function getPlayCountry() {
      const d = playCountryByLang[state.language];
      return d ? d : { key: 'china', name: '–ö–∏—Ç–∞–π', flag: 'üá®üá≥' };
    }

    function setArtOnScreen(kind, stage='service', failureType=null) {
      const c = getPlayCountry();
      const pack = artworks[c.key] || artworks.china;
      let info = pack[stage] || pack.service;
      if (stage === 'crisis' && failureType && crisisTypeArtworks[failureType]) {
        info = crisisTypeArtworks[failureType];
      }

      if (kind === 'event') {
        const img = document.getElementById('event-art');
        const cap = document.getElementById('event-art-caption');
        if (img) { setWikimediaImage(img, info.file, `${c.name}: ${stage}`, 1400); }
        if (cap) cap.innerText = info.caption || '';
      } else if (kind === 'end') {
        const img = document.getElementById('end-art');
        const cap = document.getElementById('end-art-caption');
        if (img) { setWikimediaImage(img, info.file, `${c.name}: ${stage}`, 1400); }
        if (cap) cap.innerText = info.caption || '';
      }
    }

    
function setUNArtOnEvent() {
  const img = document.getElementById('event-art');
  const cap = document.getElementById('event-art-caption');
  if (img) {
    setWikimediaImage(img, 'Emblem_of_the_United_Nations.svg', '–û–û–ù', 1400);
    img.alt = '–û–û–ù';
  }
  if (cap) cap.innerText = '–≠–º–±–ª–µ–º–∞ –û–û–ù ‚Äî —Ç–æ—á–∫–∞ –≤—Ö–æ–¥–∞ –≤ –º–Ω–æ–≥–æ—Å—Ç–æ—Ä–æ–Ω–Ω—é—é –¥–∏–ø–ª–æ–º–∞—Ç–∏—é. Wikimedia Commons.';
}

