  <script>
    const TOTAL_QUESTIONS = 30;
    const MISSION_QUOTA = 6;
    const TRUST_MAX = 10;
    const TRUST_START = 5;
    const PROFILE_QUOTA = 8;
    const LANGUAGE_QUOTA = 4;

    const REP_MAX = 10;

    // ---- Scene helper (was missing; without it onboarding could break) ----
    function setScene(_emoji, title, desc, artSrc = null, artCaption = '') {
      const t = document.getElementById('event-title');
      const d = document.getElementById('event-desc');
      const img = document.getElementById('event-art');
      const cap = document.getElementById('event-art-caption');

      if (t) t.innerText = title ?? '';
      if (d) d.innerText = desc ?? '';

      if (img) {
        if (artSrc) {
          img.src = artSrc;
          img.style.display = '';
        } else {
          // keep markup but hide if no art
          img.removeAttribute('src');
          img.style.display = 'none';
        }
      }

      if (cap) {
        cap.innerText = artCaption ?? '';
        cap.style.display = artCaption ? '' : 'none';
      }
    }


    // –°—Ü–µ–Ω—ã "–∏–∑–≥–Ω–∞–Ω–∏—è" ‚Äî –∫—É–ª—å—Ç—É—Ä–Ω–æ-–æ—Å–Ω–æ–≤–∞–Ω–Ω—ã–π –ø—Ä–æ–≤–∞–ª –º–∏—Å—Å–∏–∏.
    // –ö–ª—é—á ‚Äî —Ñ–ª–∞–≥ (emoji) –∏–∑ –≤–æ–ø—Ä–æ—Å–∞.
