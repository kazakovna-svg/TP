    // --- Artworks (public domain / museum images via Wikimedia Commons) ---
    function wc(fileName, width=1400) {
      return `https://commons.wikimedia.org/wiki/Special:FilePath/${encodeURIComponent(fileName)}?width=${width}`;
    }

    // Robust image loader with fallbacks (Wikimedia sometimes throttles or fails to render some formats).
    const _ART_PLACEHOLDER = 'data:image/svg+xml;utf8,' + encodeURIComponent(
      `<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="600">
         <defs>
           <linearGradient id="g" x1="0" y1="0" x2="1" y2="1">
             <stop offset="0" stop-color="#0f172a"/>
             <stop offset="1" stop-color="#1f2937"/>
           </linearGradient>
         </defs>
         <rect width="100%" height="100%" fill="url(#g)"/>
         <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle"
               fill="#e2e8f0" font-family="PT Sans, Arial" font-size="28">
           –ò–ª–ª—é—Å—Ç—Ä–∞—Ü–∏—è –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–∞ (Wikimedia)
         </text>
       </svg>`
    );

    function wcRaw(fileName) {
      return `https://commons.wikimedia.org/wiki/Special:FilePath/${encodeURIComponent(fileName)}`;
    }

    function setWikimediaImage(img, fileName, altText, width=1400) {
      if (!img) return;
      const primary = wc(fileName, width);
      const fallback = wcRaw(fileName);
      img.loading = 'lazy';
      img.referrerPolicy = 'no-referrer';

      img.dataset.fallbackUsed = '';
      img.onerror = () => {
        if (!img.dataset.fallbackUsed) {
          img.dataset.fallbackUsed = '1';
          img.src = fallback; // try without thumb rendering
          return;
        }
        img.onerror = null;
        img.src = _ART_PLACEHOLDER;
      };

      img.src = primary;
      img.alt = altText || '';
    }

    const playCountryByLang = {
      zh: { key: 'china', name: '–ö–∏—Ç–∞–π' , flag: 'üá®üá≥' },
      es: { key: 'spain', name: '–ò—Å–ø–∞–Ω–∏—è', flag: 'üá™üá∏' },
      fr: { key: 'france', name: '–§—Ä–∞–Ω—Ü–∏—è', flag: 'üá´üá∑' },
      de: { key: 'germany', name: '–ì–µ—Ä–º–∞–Ω–∏—è', flag: 'üá©üá™' },
      ar: { key: 'morocco', name: '–ú–∞—Ä–æ–∫–∫–æ', flag: 'üá≤üá¶' },
      hi: { key: 'india', name: '–ò–Ω–¥–∏—è', flag: 'üáÆüá≥' },
      pt: { key: 'brazil', name: '–ë—Ä–∞–∑–∏–ª–∏—è', flag: 'üáßüá∑' },
      bn: { key: 'bengal', name: '–ë–µ–Ω–≥–∞–ª–∏—è', flag: 'üáßüá©' },
      ur: { key: 'mughal', name: '–ú–æ–≥–æ–ª—å—Å–∫–∞—è —Ç—Ä–∞–¥–∏—Ü–∏—è (—Ä–µ–≥–∏–æ–Ω —É—Ä–¥—É)', flag: 'üáµüá∞' },
      id: { key: 'indonesia', name: '–ò–Ω–¥–æ–Ω–µ–∑–∏—è', flag: 'üáÆüá©' }
    };

