    function getExileSceneByFlag(flag) {
      return exileScenes[flag] || {
        emoji: 'üì≠',
        title: '–û—Ç–∑—ã–≤: —Å–µ—Ä–∏—è –º–µ–ª–∫–∏—Ö –æ—à–∏–±–æ–∫',
        reason: '–Ω–∞–∫–æ–ø–∏—Ç–µ–ª—å–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç',
        desc: '–í—ã –¥–æ–ø—É—Å—Ç–∏–ª–∏ —Å–ª–∏—à–∫–æ–º –º–Ω–æ–≥–æ –º–µ–ª–∫–∏—Ö –ø—Ä–æ–º–∞—Ö–æ–≤. –ü–æ –æ—Ç–¥–µ–ª—å–Ω–æ—Å—Ç–∏ ‚Äî —Ç–µ—Ä–ø–∏–º–æ. –í–º–µ—Å—Ç–µ ‚Äî —Ñ–∞—Ç–∞–ª—å–Ω–æ. –í–∞—Å –æ—Ç–æ–∑–≤–∞–ª–∏ ¬´–¥–ª—è –∫–æ–Ω—Å—É–ª—å—Ç–∞—Ü–∏–π¬ª. –û–±—Ä–∞—Ç–Ω–æ –≤—ã —É–∂–µ –Ω–µ –≤–µ—Ä–Ω—ë—Ç–µ—Å—å.'
      };
    }

    function exileNow(flag) {
      const scene = getExileSceneByFlag(flag);
      state.exiled = true;
      state.exile = scene;
      state.phase = 'ended';
      updateLifelinesUI();

      const total = state.deck.length || TOTAL_QUESTIONS;
      const attempted = state.correct + state.wrong;
      const accuracy = attempted === 0 ? 0 : Math.round((state.correct / attempted) * 100);
      const rank = getRank(state.correct);

      const screen = document.getElementById('game-over-screen');
      screen.classList.remove('hidden');

      document.getElementById('end-emoji').innerText = scene.emoji;
      document.getElementById('end-title').innerText = '–°–ª—É–∂–±–∞ –ø—Ä–µ–∫—Ä–∞—â–µ–Ω–∞';
      document.getElementById('end-desc').innerText =
        `${scene.title}. –ü—Ä–∏—á–∏–Ω–∞: ${scene.reason}.\n\n${scene.desc}\n\n(–ü—Ä–æ—Ñ–∏–ª—å: ${profileLabel()}, —è–∑—ã–∫: ${languageLabel()}.)`;

      document.getElementById('final-correct').innerText = state.correct;
      document.getElementById('final-score').innerText = state.score;
      document.getElementById('final-accuracy').innerText = accuracy + '%';
      document.getElementById('final-rank').innerText = rank.title;
      document.getElementById('final-trust').innerText = `${state.trust}/${TRUST_MAX}`;
      document.getElementById('final-mission').innerText = missionLabel();
      document.getElementById('final-rep').innerText = state.rep;
      document.getElementById('final-rep').innerText = state.rep;

      addLog(`‚õî –†–µ–ø—É—Ç–∞—Ü–∏—è –æ–±–Ω—É–ª–∏–ª–∞—Å—å. –û—Ç–∑—ã–≤/–∏–∑–≥–Ω–∞–Ω–∏–µ: ${scene.title} (${scene.reason}).`);
    }


    const ladder = [
      { title: '–°–ø–µ—Ü–∏–∞–ª–∏—Å—Ç‚Äë—ç–∫—Å–ø–µ—Ä—Ç', min: 0, comment: '–•–æ—Ä–æ—à–∏–π —Å—Ç–∞—Ä—Ç. –û—Å–≤–æ–∏–ª–∏ –±–∞–∑–æ–≤—ã–µ –∑–Ω–∞–Ω–∏—è –∏ –º–æ–∂–µ—Ç–µ —É–≤–µ—Ä–µ–Ω–Ω–æ —Ä–∞–±–æ—Ç–∞—Ç—å —Å —Ñ–∞–∫—Ç–∞–º–∏.' },
