const crisisTypeArtworks = {
  face:   { file: 'Zhong Kui by Gong Kai.jpg', caption: '–¢–µ–º–∞: –ø–æ—Ç–µ—Ä—è –ª–∏—Ü–∞ / –ø—É–±–ª–∏—á–Ω—ã–π –ø—Ä–æ–º–∞—Ö. Wikimedia Commons.' },
